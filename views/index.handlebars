<div class="container text-center">
	<div class="row">
    <h1>Eat-Da-Burger</h1>
		<div class="col-sm-6 text-left">
			<h2>Uneaten Burgers</h2>
			<ul>
				{{#each burgers}}
					{{#unless this.devoured}}
						<li>
							<form action="/api/burgers/{{this.id}}?_method=PUT" method="POST">
								<h4>
									{{this.burger_name}}
									<button type="submit">DEVOUR IT!</button>
								</h4>
							</form>
						</li>
					{{/unless}}
				{{/each}}
			</ul>
		</div>

		<div class="col-sm-6 text-left">
			<h2>Eaten Burgers</h2>
			<ul>
				{{#each burgers}}
					{{#if this.devoured}}
						<li>
							<h4>You Ate {{this.burger_name}}</h4>
						</li>
					{{/if}}
				{{/each}}
			</ul>
		</div>
	</div>

	<br>

	<div class="row">
		<div class="col-sm-12 text-center">
      <form action="/api/burgers" method="POST">
        <input type="text" id="name" name="burger_name" placeholder="Burger Name Goes Here">
        <button type="submit" class="btn btn-default">Add New Burger</button>
      </form>
		</div>
	</div>
</div>